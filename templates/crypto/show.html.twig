{% extends 'base.html.twig' %}

{% block title %}Crypto tracker - Suppression{% endblock %}


{% block body %}
    <div class="row border-bottom border-light mb-5 mt-5">
            <h1 class="text-center" name="titre">Supprimer un montant</h1>
    </div>

    <div class="row col-9 mx-auto">
        <div class="input-block">
            <input type="text" id="crypto_name" name="crypto[name]" value="{{ crypto.symbol }} ({{  crypto.name }})" class="input" readonly="readonly" />
            <i class="fa fa-solid fa-magnifying-glass"></i>
        </div>
        <div class="input-block">
            <input type="text" id="crypto_quantity" name="crypto[quantity]" value="{{ crypto.quantity }}" class="input" readonly="readonly" />
            <i class="fa fa-solid fa-coins"></i>
        </div>
        <div class="input-block">
            <input type="text" id="crypto_price" name="crypto[price]" value="{{ crypto.price }}" class="input" readonly="readonly" />
            <i class="fa fa-solid fa-euro-sign"></i>
        </div>

        {{ include('crypto/_delete_form.html.twig') }}
    </div>
{% endblock %}
